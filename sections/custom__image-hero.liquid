    },
    {
      "type": "textarea",
      "id": "subtitle_html",
      "label": "Subheading"
    },
    {
      "type": "header",
      "content": "Text Formatting"
    },
    {
      "type": "color",
      "id": "pretext_color",
      "label": "Preheading",
      "default": "#333"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#333"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading",
      "default": "#333"
