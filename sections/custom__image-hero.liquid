{% comment %}DTC Customers{% endcomment %}
{% unless customer and customer.tags contains 'wholesale' %}
  {% if section.settings.dtc %}
    {% render 'section-custom__image-hero' %}
  {% endif %}
{% endunless %}    

{% comment %}Wholesale Customers{% endcomment %}
{% if customer and customer.tags contains 'wholesale' %}
  {% if section.settings.wholesale %}
    {% render 'section-custom__image-hero' %}
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Image Hero",
  "class": "image-hero image-with-text-overlay image-with-text-overlay-custom overlaid-header-option",
  "settings": [
    {
      "type": "header",
      "content": "Display"
    },
    {
      "type": "checkbox",
      "id": "dtc",
      "label": "Direct To Consumer (DTC)",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "wholesale",
      "label": "Wholesale",
      "default": true
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Links entire image"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1800 x 900px recommended"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image",
      "info": "900 x 1800px recommended"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "richtext",
      "id": "pretext",
      "label": "Preheading",
      "default": "<p>Preheading</p>"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Image Hero"
